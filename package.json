{
	"private": true,
	"name": "volar",
	"displayName": "Volar",
	"description": "TypeScript support for Vue 3",
	"version": "0.14.1",
	"author": "johnsoncodehk",
	"publisher": "johnsoncodehk",
	"repository": {
		"type": "git",
		"url": "https://github.com/johnsoncodehk/volar.git"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"keywords": [
		"volar",
		"vue",
		"vue3",
		"ts",
		"typescript",
		"pug"
	],
	"activationEvents": [
		"onLanguage:vue"
	],
	"main": "./packages/client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "vue",
				"extensions": [
					".vue"
				],
				"configuration": "./languages/html-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vue",
				"scopeName": "text.html.vue",
				"path": "./syntaxes/vue.tmLanguage.json",
				"embeddedLanguages": {
					"text.pug": "jade",
					"source.css": "css",
					"source.scss": "scss",
					"source.less": "less",
					"source.js": "javascript",
					"source.ts": "typescript",
					"source.jsx": "javascriptreact",
					"source.tsx": "typescriptreact",
					"source.directive.vue": "javascript",
					"expression.embbeded.vue": "javascript"
				}
			},
			{
				"path": "./syntaxes/pug-injection.json",
				"scopeName": "pug.injection",
				"injectTo": [
					"text.html.vue"
				]
			}
		],
		"semanticTokenScopes": [
			{
				"language": "vue",
				"scopes": {
					"template/component": ["support.class.component.vue"],
					"template/conditional": ["keyword.control.conditional.vue"],
					"template/loop": ["keyword.control.loop.vue"]
				}
			}
		],
		"commands": [
			{
				"command": "volar.action.verifyAllScripts",
				"title": "Volar: Verify all scripts"
			},
			{
				"command": "volar.action.formatAllScripts",
				"title": "Volar: Format all scripts"
			},
			{
				"command": "volar.action.writeAllDebugFiles",
				"title": "Volar: Write all debug files"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"pack": "yarn && vsce package --yarn",
		"publish": "yarn && vsce publish --yarn"
	},
	"devDependencies": {
		"vsce": "latest",
		"typescript": "latest"
	},
	"dependencies": {},
	"workspaces": [
		"packages/*"
	]
}
