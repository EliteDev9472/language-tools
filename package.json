{
	"private": true,
	"name": "volar",
	"displayName": "Vue 3",
	"description": "TypeScript support for Vue 3",
	"icon": "images/icon.png",
	"version": "0.19.11",
	"author": "johnsoncodehk",
	"publisher": "johnsoncodehk",
	"repository": {
		"type": "git",
		"url": "https://github.com/johnsoncodehk/volar.git"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"keywords": [
		"volar",
		"vue",
		"vue3",
		"ts",
		"typescript",
		"pug"
	],
	"activationEvents": [
		"onLanguage:vue"
	],
	"main": "./node_modules/@volar/client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "vue",
				"extensions": [
					".vue"
				],
				"configuration": "./languages/vue-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vue",
				"scopeName": "text.html.vue",
				"path": "./syntaxes/vue.tmLanguage.json",
				"embeddedLanguages": {
					"text.html.vue": "vue",
					"text.html": "html",
					"text.pug": "jade",
					"source.css": "css",
					"source.scss": "scss",
					"source.less": "less",
					"source.js": "javascript",
					"source.ts": "typescript",
					"source.jsx": "javascriptreact",
					"source.tsx": "typescriptreact",
					"source.directive.vue": "javascript",
					"expression.embbeded.vue": "javascript",
					"css.embbeded.vue": "css"
				}
			},
			{
				"path": "./syntaxes/pug-injection.json",
				"scopeName": "pug.injection",
				"injectTo": [
					"text.html.vue"
				]
			}
		],
		"semanticTokenScopes": [
			{
				"language": "vue",
				"scopes": {
					"property": [
						"variable.other.property.vue"
					],
					"property.readonly": [
						"variable.other.constant.property.vue"
					],
					"variable": [
						"variable.other.readwrite.vue"
					],
					"variable.readonly": [
						"variable.other.constant.object.vue"
					],
					"function": [
						"entity.name.function.vue"
					],
					"namespace": [
						"entity.name.type.module.vue"
					],
					"variable.defaultLibrary": [
						"support.variable.vue"
					],
					"function.defaultLibrary": [
						"support.function.vue"
					],
					"componentTag": [
						"support.class.component.vue"
					],
					"refLabel": [
						"storage.type.vue"
					],
					"refVariable": [
						"variable.ref"
					]
				}
			}
		],
		"commands": [
			{
				"command": "volar.action.restartServer",
				"title": "Volar: Restart Vue server"
			},
			{
				"command": "volar.action.verifyAllScripts",
				"title": "Volar: Verify All Scripts"
			},
			{
				"command": "volar.action.formatAllScripts",
				"title": "Volar: Format All Scripts"
			},
			{
				"command": "volar.action.writeVirtualFiles",
				"title": "Volar: Write Virtual Files (Debug)"
			},
			{
				"command": "volar.action.showCallGraph",
				"title": "Volar: Show Call Graph (Experimental)"
			},
			{
				"command": "volar.action.splitEditors",
				"title": "Volar: Split <script>, <template>, <style> Editors",
				"category": "Volar",
				"icon": "images/split-editors.png"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "volar.action.splitEditors",
					"when": "editorLangId == vue",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"pack": "yarn && vsce package --yarn",
		"publish": "yarn && vsce publish --yarn",
		"rollup": "rollup -c rollup.config.js"
	},
	"devDependencies": {
		"typescript": "latest",
		"rollup": "latest",
		"rollup-plugin-typescript2": "latest",
		"rollup-plugin-node-resolve": "latest",
		"@rollup/plugin-commonjs": "latest",
		"@rollup/plugin-json": "latest"
	},
	"dependencies": {},
	"workspaces": [
		"packages/*"
	]
}
