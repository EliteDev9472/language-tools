{
	"compilerOptions": {
		"target": "es2019",
		"lib": [
			"ES2020"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"vscode-pug-languageservice": [
				"packages/vscode-pug-languageservice/src"
			],
			"vscode-typescript-languageservice": [
				"packages/vscode-typescript-languageservice/src"
			],
			"vscode-vue-languageservice": [
				"packages/vscode-vue-languageservice/src"
			],
			"@volar/*": [
				"packages/*/src"
			]
		},
	},
	"exclude": [
		"node_modules",
		"**/*/tests",
		"**/*/testsCases",
	],
}