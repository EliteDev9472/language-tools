{
	"compilerOptions": {
		"lib": [
			"esnext",
			"dom"
		],
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/": [
				"./*"
			]
		}
	},
	"include": [
		"completions/**/*",
		"definitions/**/*",
		"renames/**/*",
		"typeChecks/**/*",
		"typeChecks/**/*.html",
	]
}