{
	"compilerOptions": {
		"lib": [
			"esnext",
			"dom"
		],
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"jsx": "preserve",
	},
	"include": [
		"renames/**/*",
		"typeChecks/**/*",
		"typeChecks/**/*.html",
	]
}